@model SimpleMVCApplication.Models.Car

<div class="card car-details w-100">
    <img src="@Model.ImageURL" alt="CarImage" class="card-img-top" />
    <div class="card-body">
        <h4 class="card-title">@Model.Brand - @Model.Model </h4>
        <p class="card-text">@Model.Description</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">
            <div class="row">
                <div class="col-6 list-group-label">
                    Colour
                </div>
                <div class="col-6">
                    @Model.Colour
                </div>
            </div>
        </li>
        <li class="list-group-item">
            <div class="row">
                <div class="col-6 list-group-label">
                    Car Type
                </div>
                <div class="col-6">
                    @Model.TypeofCar
                </div>
            </div>
        </li>
        <li class="list-group-item">
            <div class="row">
                <div class="col-6 list-group-label">
                    Transmission
                </div>
                <div class="col-6">
                    @Model.TransmissionType
                </div>
            </div>
        </li>
        <li class="list-group-item">
            <div class="row">
                <div class="col-6 list-group-label">
                    Horsepower
                </div>
                <div class="col-6">
                    @Model.HorsePower bHP
                </div>
            </div>
        </li>
        <li class="list-group-item">
            <div class="row">
                <div class="col-6 list-group-label">
                    Maximum Speed
                </div>
                <div class="col-6">
                    @Model.MaximumSpeed Km/Hr
                </div>
            </div>
        </li>
        <li class="list-group-item">
            <div class="row">
                <div class="col-6 list-group-label">
                    Mileage / Fuel Economy
                </div>
                <div class="col-6">
                    @Model.Mileage
                </div>
            </div>
        </li>
        <li class="list-group-item">
            <div class="row">
                <div class="col-6 list-group-label">
                    Price (in Euros)
                </div>
                <div class="col-6">
                    @String.Format("€ {0:N2}", Model.Price)
                </div>
            </div>
        </li>
    </ul>
</div>